<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.tangyi.user.mapper.UserMapper">
    <resultMap id="userResultMap" type="com.github.tangyi.user.module.User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="salt" property="salt"/>
        <result column="phone" property="phone"/>
        <result column="avatar" property="avatar"/>
        <result column="email" property="email"/>
        <result column="sex" property="sex"/>
        <result column="born" property="born"/>
        <result column="dept_id" property="deptId"/>
        <result column="remark" property="remark"/>
        <result column="creator" property="creator"/>
        <result column="create_date" property="createDate"/>
        <result column="modifier" property="modifier"/>
        <result column="modify_date" property="modifyDate"/>
        <result column="del_flag" property="delFlag"/>
        <result column="application_code" property="applicationCode"/>
    </resultMap>

    <resultMap id="userVoResultMap" type="com.github.tangyi.common.vo.UserVo">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="salt" property="salt"/>
        <result column="phone" property="phone"/>
        <result column="avatar" property="avatar"/>
        <result column="email" property="email"/>
        <result column="sex" property="sex"/>
        <result column="born" property="born"/>
        <result column="dept_id" property="deptId"/>
        <result column="remark" property="remark"/>
        <result column="creator" property="creator"/>
        <result column="create_date" property="createDate"/>
        <result column="modifier" property="modifier"/>
        <result column="modify_date" property="modifyDate"/>
        <result column="del_flag" property="delFlag"/>
        <result column="application_code" property="applicationCode"/>
        <collection property="roleList" ofType="com.github.tangyi.common.vo.Role">
            <id column="id" property="id"/>
            <result column="role_name" property="roleName"/>
            <result column="role_code" property="roleCode"/>
            <result column="role_desc" property="roleDesc"/>
            <result column="creator" property="creator"/>
            <result column="create_date" property="createDate"/>
            <result column="modifier" property="modifier"/>
            <result column="modify_date" property="modifyDate"/>
            <result column="del_flag" property="delFlag"/>
            <result column="application_code" property="applicationCode"/>
        </collection>
    </resultMap>

    <sql id="userColumns">
        a.id as "id",
        a.username,
        a.password,
        a.salt,
        a.phone,
        a.avatar,
        a.email,
        a.sex,
        a.born,
        a.remark,
        a.creator,
        a.create_date,
        a.modifier,
        a.modify_date,
        a.del_flag,
        a.application_code
    </sql>

    <!-- where 条件 -->
    <sql id="whereColumnList">
        <if test="username != null and username != ''">
            and a.username like #{username}
        </if>
        <if test="born != null and born != '' ">
            and a.born like #{born}
        </if>
        <if test="phone != null and phone != ''">
            and a.phone like #{phone}
        </if>
        <if test="email != null and email != ''">
            and a.email = #{email}
        </if>
    </sql>

    <sql id="selectUserVo">
        <include refid="userColumns"/>,
        r.id,
        r.role_name,
        r.role_code,
        r.role_desc,
        r.creator,
        r.create_date,
        r.modifier,
        r.modify_date,
        r.del_flag,
        r.application_code
        FROM
        sys_user  a
        LEFT JOIN sys_user_role ur ON ur.user_id = a.id
        LEFT JOIN sys_role r ON r.id = ur.role_id
    </sql>

    <select id="selectUserVoByUsername" resultMap="userVoResultMap">
        SELECT
        <include refid="selectUserVo"/>
        WHERE a.username = #{username}
    </select>

    <select id="get" resultMap="userResultMap">
        SELECT
        <include refid="userColumns"/>
        FROM sys_user a
        WHERE a.id = #{id}
    </select>

    <select id="findList" resultMap="userResultMap">
        SELECT
        <include refid="userColumns"/>
        FROM sys_user  a
        WHERE a.del_flag = 0
        <include refid="whereColumnList"/>
    </select>

    <!-- 新增用户 -->
    <insert id="insert">
        insert  into sys_user (
            id,
            username,
            password,
            salt,
            phone,
            avatar,
            email,
            sex,
            born,
            remark,
            creator,
            create_date,
            modifier,
            modify_date,
            del_flag,
            application_code
        ) values (
            #{id},
            #{username},
            #{password},
            #{salt},
            #{phone},
            #{avatar},
            #{email},
            #{sex},
            #{born},
            #{remark},
            #{creator},
            #{createDate},
            #{modifier},
            #{modifyDate},
            #{delFlag},
            #{applicationCode}
        );
    </insert>

    <!-- 更新用户 -->
    <update id="update">
        update sys_user set
        <if test="username != null">
            username = #{username} ,
        </if>
        <if test="password != null">
            password = #{password} ,
        </if>
        <if test="salt != null">
            salt = #{salt} ,
        </if>
        <if test="phone != null">
            phone = #{phone} ,
        </if>
        <if test="avatar != null">
            avatar = #{avatar} ,
        </if>
        <if test="email != null">
            email = #{email} ,
        </if>
        <if test="sex != null">
            sex = #{sex} ,
        </if>
        <if test="born != null">
            born = #{born} ,
        </if>
        <if test="remark != null">
            remark = #{remark} ,
        </if>
        <if test="creator != null">
            creator = #{creator} ,
        </if>
        <if test="createDate != null">
            create_date = #{createDate} ,
        </if>
        <if test="delFlag != null">
            del_flag = #{delFlag} ,
        </if>
        <if test="applicationCode != null">
            application_code = #{applicationCode} ,
        </if>
        modifier = #{modifier} ,
        modify_date = #{modifyDate}
        where id = #{id}
    </update>
</mapper>
