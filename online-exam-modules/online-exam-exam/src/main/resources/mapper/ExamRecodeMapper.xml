<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.tangyi.exam.mapper.ExamRecodeMapper">
    <resultMap id="examRecodeResultMap" type="com.github.tangyi.exam.module.ExamRecode">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="examination_id" property="examinationId"/>
        <result column="course_id" property="courseId"/>
        <result column="exam_time" property="examTime"/>
        <result column="score" property="score"/>
        <result column="creator" property="creator"/>
        <result column="create_date" property="createDate"/>
        <result column="modifier" property="modifier"/>
        <result column="modify_date" property="modifyDate"/>
        <result column="del_flag" property="delFlag"/>
        <result column="application_code" property="applicationCode"/>
    </resultMap>

    <sql id="examRecodeColumns">
        a.id as "id",
        a.user_id,
        a.examination_id,
        a.course_id,
        a.exam_time,
        a.score,
        a.creator,
        a.create_date,
        a.modifier,
        a.modify_date,
        a.del_flag,
        a.application_code
    </sql>

    <!-- where 条件 -->
    <sql id="whereColumnList">
        <if test="userId != null and userId != ''">
            and a.user_id = #{userId}
        </if>
        <if test="examinationId != null and examinationId != ''">
            and a.examination_id = #{examinationId}
        </if>
        <if test="courseId != null and courseId != ''">
            and a.course_id = #{courseId}
        </if>
    </sql>

    <select id="get" resultMap="examRecodeResultMap">
        SELECT
        <include refid="examRecodeColumns"/>
        FROM exam_recode a
        WHERE a.id = #{id} and a.del_flag = 0
    </select>

    <select id="getByUserIdAndExaminationId" resultMap="examRecodeResultMap">
        SELECT
        <include refid="examRecodeColumns"/>
        FROM exam_recode a
        WHERE a.user_id = #{userId} and examination_id = #{examinationId} and a.del_flag = 0
    </select>

    <select id="findList" resultMap="examRecodeResultMap">
        SELECT
        <include refid="examRecodeColumns"/>
        FROM exam_recode a
        WHERE a.del_flag = 0
        <include refid="whereColumnList"/>
    </select>

    <select id="findListById" resultMap="examRecodeResultMap">
        SELECT
        <include refid="examRecodeColumns"/>
        FROM exam_recode a
        WHERE a.id IN
        <foreach collection="collection" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

    <insert id="insert">
        insert  into exam_recode (
            id,
            user_id,
            examination_id,
            course_id,
            exam_time,
            score,
            creator,
            create_date,
            modifier,
            modify_date,
            del_flag,
            application_code
        ) values (
            #{id},
            #{userId},
            #{examinationId},
            #{courseId},
            #{examTime},
            #{score},
            #{creator},
            #{createDate},
            #{modifier},
            #{modifyDate},
            #{delFlag},
            #{applicationCode}
        );
    </insert>

    <delete id="delete">
        UPDATE exam_recode SET
			del_flag = 1
		WHERE id = #{id}
    </delete>
</mapper>
