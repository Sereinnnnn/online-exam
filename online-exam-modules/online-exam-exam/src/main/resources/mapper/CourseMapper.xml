<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.tangyi.exam.mapper.CourseMapper">
    <resultMap id="courseResultMap" type="com.github.tangyi.exam.module.Course">
        <id column="id" property="id"/>
        <result column="course_name" property="courseName"/>
        <result column="college" property="college"/>
        <result column="major" property="major"/>
        <result column="teacher" property="teacher"/>
        <result column="creator" property="creator"/>
        <result column="create_date" property="createDate"/>
        <result column="modifier" property="modifier"/>
        <result column="modify_date" property="modifyDate"/>
        <result column="del_flag" property="delFlag"/>
        <result column="application_code" property="applicationCode"/>
    </resultMap>

    <sql id="courseColumns">
        a.id as "id",
        a.course_name,
        a.college,
        a.major,
        a.teacher,
        a.creator,
        a.create_date,
        a.modifier,
        a.modify_date,
        a.del_flag,
        a.application_code
    </sql>

    <select id="get" resultMap="courseResultMap">
        SELECT
        <include refid="courseColumns"/>
        FROM course a
        WHERE a.id = #{id} and a.del_flag = 0
    </select>

    <select id="findList" resultMap="courseResultMap">
        SELECT
        <include refid="courseColumns"/>
        FROM course a
        WHERE a.del_flag = 0
    </select>

    <insert id="insert">
        insert  into course (
            id,
            course_name,
            college,
            major,
            teacher,
            creator,
            create_date,
            modifier,
            modify_date,
            del_flag,
            application_code
        ) values (
            #{id},
            #{courseName},
            #{college},
            #{major},
            #{teacher},
            #{creator},
            #{createDate},
            #{modifier},
            #{modifyDate},
            #{delFlag},
            #{applicationCode}
        );
    </insert>

    <delete id="delete">
        UPDATE course SET
			del_flag = 1
		WHERE id = #{id}
    </delete>
</mapper>
